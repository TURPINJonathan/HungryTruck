{% extends 'base.html.twig' %}

{% block title %}BackOffice - Liste Categories de nourritures
{% endblock %}

{% block body %}
	<h1>Liste Categories de nourritures</h1>

	<a href="{{ path('back_office_category_food_new') }}" class="btn btn-primary mx-3">Créer</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Crée le</th>
				<th>Modifié le</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category_food in category_foods %}
				<tr>
					<td>{{ category_food.id }}</td>
					<td>{{ category_food.name }}</td>
					<td>{{ category_food.createdAt ? category_food.createdAt|date('Y-m-d H:i') : '' }}</td>
					<td>{{ category_food.updatedAt ? category_food.updatedAt|date('Y-m-d H:i') : '' }}</td>
					<td>
						<a href="{{ path('back_office_category_food_show', {'id': category_food.id}) }}" class="btn btn-primary">
							<i class="far fa-eye"></i>
						</a>
						<a href="{{ path('back_office_category_food_edit', {'id': category_food.id}) }}" class="btn btn-warning mx-2">
							<i class="far fa-edit"></i>
						</a>
						<form method="post" action="{{ path('back_office_category_food_delete', {'id': category_food.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category_food.id) }}">
							<button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
						</form>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun enregistrement trouver</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
