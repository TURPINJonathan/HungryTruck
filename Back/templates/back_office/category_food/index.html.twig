{% extends 'base.html.twig' %}

{% block title %}BackOffice - Liste Categories de nourritures{% endblock %}

{% block body %}
    <h1>Liste Categories de nourritures</h1>

 <a href="{{ path('back_office_category_food_new') }}" class="btn btn-primary mx-3">Cr√©e</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_food in category_foods %}
            <tr>
                <td>{{ category_food.id }}</td>
                <td>{{ category_food.name }}</td>
                <td>{{ category_food.createdAt ? category_food.createdAt|date('Y-m-d H:i') : '' }}</td>
                <td>{{ category_food.updatedAt ? category_food.updatedAt|date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a href="{{ path('back_office_category_food_show', {'id': category_food.id}) }}"><i class="far fa-eye fa-2x"></i></a>
                    <a href="{{ path('back_office_category_food_edit', {'id': category_food.id}) }}"><i class="far fa-edit fa-2x"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
