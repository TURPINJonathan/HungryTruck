{% extends 'base.html.twig' %}

{% block title %}BackOffice - Liste Utilisateur{% endblock %}

{% block body %}
    <h1>BackOffice - Liste Utilisateur</h1>

<a href="{{ path('back_office_user_new') }}" class="btn btn-primary mx-3">Cr√©e</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Pseudo</th>
                <th>Avatar</th>
                <th>Code Postale</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Siret</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.avatar }}</td>
                <td>{{ user.cp }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.siret }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a href="{{ path('back_office_user_show', {'id': user.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('back_office_user_edit', {'id': user.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
