{% extends 'base.html.twig' %}

{% block title %}BackOffice - Liste Utilisateur
{% endblock %}

{% block body %}
	<h1>BackOffice - Liste Utilisateur</h1>

	<a href="{{ path('back_office_user_new') }}" class="btn btn-primary mx-3">Créer</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Pseudo</th>
				<th>Avatar</th>
				<th>Adresse</th>
                <th>Longitude</th>
                <th>Latitude</th>
				<th>Siret</th>
				<th>Crée le</th>
				<th>Modifier le</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.pseudo }}</td>
					<td>{{ user.avatar ? user.avatar : 'Null'}}</td>
					<td>{{ user.adresse }}</td>
                	<td>{{ user.longitude ? user.longitude : 'Null' }}</td>
                	<td>{{ user.latitude  ? user.latitude : 'Null'}}</td>
					<td>{{ user.siret ? user.siret : 'Null'}}</td>
					<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : '' }}</td>
					<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i') : '' }}</td>
					<td>
						<a href="{{ path('back_office_user_show', {'id': user.id}) }}" class="btn btn-primary">
							<i class="far fa-eye"></i>
						</a>
						<a href="{{ path('back_office_user_edit', {'id': user.id}) }}" class="btn btn-warning mx-2">
							<i class="far fa-edit"></i>
						</a>
						<a href="{{ path('back_office_user_delete', {'id': user.id}) }}" class="btn btn-danger mx-2">
							<i class="fas fa-trash-alt"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="13">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
