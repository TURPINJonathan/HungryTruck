{% extends 'base.html.twig' %}

{% block title %}EventFoodtruck index{% endblock %}

{% block body %}
    <h1>EventFoodtruck index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>Hours</th>
                <th>Place</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event_foodtruck in event_foodtrucks %}
