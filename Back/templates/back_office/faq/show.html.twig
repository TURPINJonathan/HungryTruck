{% extends 'base.html.twig' %}

{% block title %}Faq{% endblock %}

{% block body %}
    <h1>Faq</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faq.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ faq.question }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ faq.reponse }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ faq.createdAt ? faq.createdAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ faq.updatedAt ? faq.updatedAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_office_faq_index') }}" class="btn btn-primary"><i class="fas fa-undo-alt"></i></a>

    <a href="{{ path('back_office_faq_edit', {'id': faq.id}) }}" class="btn btn-warning mx-2"><i class="far fa-edit"></i></a>

    {{ include('back_office/faq/_delete_form.html.twig') }}
{% endblock %}
